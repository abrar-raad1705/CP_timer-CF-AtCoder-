{
  "manifest_version": 3,
  "name": "Codeforces Timer",
  "version": "1.0",
  "description": "A timer that starts when you open a Codeforces problem.",
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": ["https://codeforces.com/problemset/problem/*/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
}
